import random
import sys

running = True
best_guess=100

def guess_num(number,i,running,running2):
    print("\nGuess a number between 1 and 32:")
    user_input = input()
    guess = int(user_input)
    if guess==number:
        print("Correct!")
        no_guess = i
        print("Number of guesses {}".format(no_guess))
        running2 = False
        if no_guess<5:
            running = False
        return no_guess,running, running2
    elif guess<number:
        a = 5
        print("Your guess is too low")
        return a,running, running2
    elif guess>number:
        a = 5
        print("Your guess is too high")
        return a,running, running2
a = 5
no_round = 1
while running:
    number1= (random.random() * 33)//1
    number1= int(number1)
    print("\nRound", no_round)
    i=1
    running2 =True
    while running2 == True:
        if a>4:
            a,running,running2= guess_num(number1,i,running,running2)
            i+=1
    no_round +=1
    g = i-1
    if g<best_guess:
        best_guess = g
    print("High score (lowest number of guesses):", best_guess)
